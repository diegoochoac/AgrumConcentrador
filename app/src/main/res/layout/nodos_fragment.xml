<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Profundidad:"
                android:textSize="@dimen/texSizeNodoFragment"
                android:id="@+id/textView6"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0.0"
                android:id="@+id/txtNodosProfundidad"
                android:textSize="@dimen/textSizeBigNodoFragment" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="[cm]"
                android:id="@+id/textView8" />

        </TableRow>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <TableLayout
                android:layout_width="365dp"
                android:layout_height="match_parent"
                android:id="@+id/table1"
                android:layout_weight="0.69">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Ang Tractor:"
                        android:id="@+id/textView7"
                        android:layout_column="0"
                        android:textSize="@dimen/texSizeNodoFragment"
                        android:textColor="#ff000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="0"
                        android:textSize="@dimen/texSizeNodoFragment"
                        android:id="@+id/txtNodosAngTractor"
                        android:layout_column="1" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Ang Implemento:"
                        android:id="@+id/textView10"
                        android:layout_column="0"
                        android:textSize="@dimen/texSizeNodoFragment"
                        android:textColor="#ff000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="0"
                        android:textSize="@dimen/texSizeNodoFragment"
                        android:id="@+id/txtNodosAngImplemento"
                        android:layout_column="1" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Dif Angulos:"
                        android:id="@+id/textView12"
                        android:layout_column="0"
                        android:textSize="@dimen/texSizeNodoFragment"
                        android:textColor="#ff000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="0"
                        android:textSize="@dimen/texSizeNodoFragment"
                        android:id="@+id/txtNodosaAngDiferencia"
                        android:layout_column="1" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Ang Cero:"
                        android:id="@+id/textView14"
                        android:layout_column="0"
                        android:textSize="@dimen/texSizeNodoFragment"
                        android:textColor="#ff000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="0"
                        android:textSize="@dimen/texSizeNodoFragment"
                        android:id="@+id/txtNodosAngCero"
                        android:layout_column="1" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Ang Medicion:"
                        android:id="@+id/textView16"
                        android:layout_column="0"
                        android:textSize="@dimen/texSizeNodoFragment"
                        android:textColor="#ff000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="0"
                        android:textSize="@dimen/texSizeNodoFragment"
                        android:id="@+id/txtNodosAngMedicion"
                        android:layout_column="1" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Offset MediciÃ³n"
                        android:id="@+id/textView29"
                        android:layout_column="0"
                        android:textSize="@dimen/texSizeNodoFragment"
                        android:textColor="#ff000000" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:id="@+id/txtNodosOffetMedicion"
                        android:layout_column="1" />

                </TableRow>

            </TableLayout>

            <TableLayout
                android:layout_width="195dp"
                android:layout_height="match_parent"
                android:layout_weight="0.30">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Setear Cero"
                        android:textSize="@dimen/texSizeNodoFragment"
                        android:id="@+id/btnNodosSetCero"
                        android:layout_column="0" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Iniciar Com"
                        android:textSize="@dimen/texSizeNodoFragment"
                        android:id="@+id/btnNodosInitCom"
                        android:layout_column="0" />
                </TableRow>
            </TableLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>